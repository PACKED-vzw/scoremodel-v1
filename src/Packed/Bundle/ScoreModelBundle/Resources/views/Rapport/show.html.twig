{% extends '::base.html.twig' %}
        {%block body%}
<h1>Rapport</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Naam</th>
            <td>{{ entity.naam }}</td>
        </tr>
        <tr>
            <th>Score</th>
            <td>{{ entity.score }}</td>
        </tr>
        <tr>
            <th>Grafiek</th>
            <td>{{ entity.grafiek }}</td>
        </tr>
        <tr>
            <th>Datumgeneratie</th>
            <td>{{ entity.datumGeneratie|date('Y-m-d H:i:s') }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('rapport') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('rapport_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('rapport_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}