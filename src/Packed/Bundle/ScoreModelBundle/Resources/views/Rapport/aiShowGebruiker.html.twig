{% extends 'ScoreModelBundle:Rapport:aiLayout.html.twig' %}
{%block gebruikersmenuclass%}active{% endblock %}
{% block enlink%}
<a href="{{ path(app.request.get('_route'), {'_locale': 'en', 'id': app.request.attributes.get('id') }) }}">EN</a>
{% endblock%}

{% block nllink%}
<a href="{{ path(app.request.get('_route'), {'_locale': 'nl', 'id': app.request.attributes.get('id')}) }}">NL</a>
{% endblock%}
{% block body %}
<div class="span12">
<table class="table table-striped table-bordered">
    <tbody>
    <tr>
        <th>Id</th>
        <td>{{ gebruiker.id }}</td>
    </tr>
    <tr>
        <th>Naam</th>
        <td>{{ gebruiker.username }}</td>
    </tr>
    <tr>
        <th>Organisatie</th>
        <td>{{ gebruiker.organisatie }}</td>
    </tr>
    <tr>
        <th>Type organisatie</th>
        <td>{{ gebruiker.typeOrganisatie }}</td>
    </tr>
    <tr>
        <th>Grootte organisatie</th>
        <td>{{ gebruiker.grootteOrganisatie }}</td>
    </tr>
    <tr>
        <th>Datum registratie</th>
        <td>{{ gebruiker.datumIngevoerd|date('Y-m-d H:i:s') }}</td>
    </tr>
    <tr>
        <th>Rapporten</th>
        <td>
            {%for rapport in gebruiker.rapporten%}
                <span class="label label-rapport">
                 <a href="{{path('rapport_stap1',{'_locale': app.request.locale, 'id': rapport.id})}}">
                 {%if rapport.naam != "" %}
                    {{rapport.naam}}
                 {%else%}
                    {{rapport.id}}
                 {%endif%}
                 </a>
                </span>
            {%endfor%}
        </td>
    </tr>
    </tbody>
</table>

<i class="icon-arrow-left"></i>
        <a href="{{ path('ai_gebruiker_index',{'_locale': app.request.locale}) }}">
            Terug naar het overzicht.
        </a>

    {#
    <li>
        <form action="{{ path('rapport_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
    #}
</div>
{% endblock %}