<h1>Rapport list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Naam</th>
            <th>Score</th>
            <th>Grafiek</th>
            <th>Datumgeneratie</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('rapport_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.naam }}</td>
            <td>{{ entity.score }}</td>
            <td>{{ entity.grafiek }}</td>
            <td>{% if entity.datumGeneratie %}{{ entity.datumGeneratie|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('rapport_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('rapport_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('rapport_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
