<h1>Sectie list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Waarde</th>
            <th>Waarde_en</th>
            <th>Intro</th>
            <th>Intro_en</th>
            <th>Volgorde</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('admin_sectie_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.waarde }}</td>
            <td>{{ entity.waardeen }}</td>
            <td>{{ entity.intro }}</td>
            <td>{{ entity.introen }}</td>
            <td>{{ entity.volgorde }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_sectie_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_sectie_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('admin_sectie_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
