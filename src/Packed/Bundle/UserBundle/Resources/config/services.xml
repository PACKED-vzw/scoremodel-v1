<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="packed_user.registration.form.type" class="Packed\Bundle\UserBundle\Form\Type\RegistrationFormType">
            <tag name="form.type" alias="packed_user_registration" />
            <argument>%fos_user.model.user.class%</argument>
        </service>

        <service id="packed_user.profile.form.type" class="Packed\Bundle\UserBundle\Form\Type\ProfileFormType">
            <tag name="form.type" alias="packed_user_profile" />
            <argument>%fos_user.model.user.class%</argument>
        </service>

    </services>

</container>